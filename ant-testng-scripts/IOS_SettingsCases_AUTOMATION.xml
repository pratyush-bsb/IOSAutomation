<?xml version="1.0" encoding="UTF-8"?>

<suite name="IOS Settings Automation" parallel="tests" thread-count="1">

	<listeners>
		<listener class-name="org.uncommons.reportng.HTMLReporter" />
	</listeners>

	<test name="Settings cases -- Settings page elements" preserve-order="true">
		<classes>
			<class name="com.bsb.hike.ios.tests.settings.SettingsPageElements" />
		</classes>
	</test>
	
	<test name="Settings cases -- Account page elements" preserve-order="true">
		<classes>
			<class name="com.bsb.hike.ios.tests.settings.AccountPageInSettings" />
		</classes>
	</test>
	
	<test name="Settings cases -- 128 bit SSL test" preserve-order="true">
		<classes>
			<class name="com.bsb.hike.ios.tests.settings.BitSSLTest" />
		</classes>
	</test>
	
	<test name="Settings cases -- Blocked list" preserve-order="true">
		<classes>
			<class name="com.bsb.hike.ios.tests.settings.BlockedListTests" />
		</classes>
	</test>
	
	<test name="Settings cases -- Contact" preserve-order="true">
		<classes>
			<class name="com.bsb.hike.ios.tests.settings.Contact" />
		</classes>
	</test>
	
	<test name="Settings cases -- Delete Account" preserve-order="true">
		<classes>
			<class name="com.bsb.hike.ios.tests.settings.DeleteAccount" />
		</classes>
	</test>
	
	<test name="Settings cases -- FAQ" preserve-order="true">
		<classes>
			<class name="com.bsb.hike.ios.tests.settings.FAQ" />
		</classes>
	</test>
	
	<test name="Settings cases -- Free SMS to India" preserve-order="true">
		<classes>
			<class name="com.bsb.hike.ios.tests.settings.FreeSMSToIndia" />
		</classes>
	</test>
	
	<test name="Settings cases -- Notifications in Settings" preserve-order="true">
		<classes>
			<class name="com.bsb.hike.ios.tests.settings.NotificationsInSettings" />
		</classes>
	</test>
	
	<test name="Settings cases -- Reset" preserve-order="true">
		<classes>
			<class name="com.bsb.hike.ios.tests.settings.ResetFromDevice" />
		</classes>
	</test>
	
	<test name="Settings cases -- System Health" preserve-order="true">
		<classes>
			<class name="com.bsb.hike.ios.tests.settings.SystemHealth" />
		</classes>
	</test>
	
</suite>
