<?xml version="1.0" encoding="UTF-8"?>

<suite name="IOS Automation" parallel="tests" thread-count="1">

	<listeners>
		<listener class-name="org.uncommons.reportng.HTMLReporter" />
	</listeners>

	<test name="Group cases -- Group chat creation" preserve-order="true">
		<classes>
			<class name="com.bsb.hike.ios.tests.groupChat.GroupChatThreadCreation" />
		</classes>
	</test>
	
	<test name="Group cases -- Forward message in group" preserve-order="true">
		<classes>
			<class name="com.bsb.hike.ios.tests.groupChat.ForwardMessageInGroup" />
		</classes>
	</test>
	
	<test name="Group cases -- Delete message in group" preserve-order="true">
		<classes>
			<class name="com.bsb.hike.ios.tests.groupChat.DeletingMessageInGroup" />
		</classes>
	</test>
	
	<test name="Group cases -- Copy pasting message in group" preserve-order="true">
		<classes>
			<class name="com.bsb.hike.ios.tests.groupChat.CopyPastingMessageInGroup" />
		</classes>
	</test>
	
	<test name="Group cases -- Group chat events" preserve-order="true">
		<classes>
			<class name="com.bsb.hike.ios.tests.groupChat.GroupChatEvents" />
		</classes>
	</test>
	
	<test name="Group cases -- Add members to group" preserve-order="true">
		<classes>
			<class name="com.bsb.hike.ios.tests.groupChat.AddMembersToGroup" />
		</classes>
	</test>
	
	<test name="Group cases -- Remove members from group" preserve-order="true">
		<classes>
			<class name="com.bsb.hike.ios.tests.groupChat.RemoveUsersFromGroup" />
		</classes>
	</test>
	
	<test name="Group cases -- Group chat name update" preserve-order="true">
		<classes>
			<class name="com.bsb.hike.ios.tests.groupChat.GCNameUpdate" />
		</classes>
	</test>
	<!-- Dropping 'InviteFromGC' test cases as the 'Invite' option has been dropped from release 3.4.1.10.2
	<test name="Group cases - Invite from GC info" preserve-order="true">
		<classes>
			<class name="com.bsb.hike.ios.tests.groupChat.InviteFromGCInfo" />
		</classes>
	</test>
	 -->
	
	<test name="Group cases -- Mute group" preserve-order="true">
		<classes>
			<class name="com.bsb.hike.ios.tests.groupChat.MuteGroup" />
		</classes>
	</test>
	
	<test name="Group cases -- Block/Unblock user in group" preserve-order="true">
		<classes>
			<class name="com.bsb.hike.ios.tests.groupChat.BlockOrUnblockUser" />
		</classes>
	</test>
	
	<test name="Group cases -- Add to contacts from group" preserve-order="true">
		<classes>
			<class name="com.bsb.hike.ios.tests.groupChat.AddToContactsFromGCInfo" />
		</classes>
	</test>
	
	<test name="Group cases -- Send message in group" preserve-order="true">
		<classes>
			<class name="com.bsb.hike.ios.tests.groupChat.SendMessageInGC" />
		</classes>
	</test>
	
	<test name="Group cases -- Leave/Delete GC" preserve-order="true">
		<classes>
			<class name="com.bsb.hike.ios.tests.groupChat.LeaveGroupAndDeleteChatThread" />
		</classes>
	</test>
	
	<test name="Group cases -- New User join events in GC" preserve-order="true">
		<classes>
			<class name="com.bsb.hike.ios.tests.groupChat.NewUserJoinEvents" />
		</classes>
	</test>
	
	<test name="Group cases -- GC add or remove participants" preserve-order="true">
		<classes>
			<class name="com.bsb.hike.ios.tests.groupChat.GCAddOrRemoveByParticipants" />
		</classes>
	</test>
	
</suite>
